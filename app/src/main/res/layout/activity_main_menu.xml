<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Здравствуйте!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Иванов Иван Иванович"
        android:textSize="20sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnSearchRooms"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Поиск номеров по фильтрам"
        android:textSize="16sp"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAllRooms"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Просмотр всех номеров"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Выйти из учетной записи"
        android:textSize="16sp"
        android:backgroundTint="#F44336"/>

</LinearLayout>
